<%=@survey.title %>
<img src="../<%=@survey.filepath%>" alt="Survey Photo" height="150" width="150">

<br>
<br>
<% @question.each_with_index do |question, question_no| %>
<form method="post" action="/responses">
  <%= question.text %> <img src="../<%=question.filepath%>" alt="Question Pic" height="100" width="100">
  <br>
    <% @choices[question_no].each do |choice| %>
      <input type="radio" name="answer[<%= question_no %>]" value="<%= choice.id %>"> <%= choice.option %>
      <br>
    <% end %>
    <input type="hidden" name="survey_id" value="<%= @survey_id %>">

  <% end %>
  <input type="submit">
</form>






